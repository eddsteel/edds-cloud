!!! 5
%html{:lang => 'en'}
  %head
    %meta{:charset => 'utf-8'}
    %meta{:name=>"viewport", 
      :content=>"width=device-width; initial-scale=1.0"}
    %title<
      = title
    %link{:rel => 'stylesheet', :href => rurl('/style.css')}
    %link{:rel => 'stylesheet', :href => rurl('/fonts.css')}
  %body.cloud
    %header.main
      %hgroup
        %a{:href => rurl("/about")}
          %h1
            %span Edd's
        %a{:href => rurl("/")}
          %h2
            %span Cloud
    %section#main
      -if @title
        %h2
          =@title
      =yield
    %footer{:id=>@next_key ? 'more' : 'end'}
      - if @next_key
        %a{:href=>rurl("/more/#@next_key")}
          More
      - else
        = "&\##{9748};"
    .grid
      -100.times do
        .gridline &nbsp;
