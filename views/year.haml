%section.contents
  - now = (Date.today.year * 100) + Date.today.month
  - target = year.to_i * 100
  %ul
    -(1..4).each do |month|
      - if target + month <= now
        %li
          %a{:href=>rurl("/#{year}/#{month}"),
             :title=>"#{month_name(month)}, #{year}"}
            =month_name(month)
  - if target + 5 <= now
    %ul
      -(5..8).each do |month|
        - if target + month <= now
          %li
            %a{:href=>rurl("/#{year}/#{month}"),
               :title=>"#{month_name(month)}, #{year}"}
              =month_name(month)
  - if target + 9 <= now
    %ul
      -(9..12).each do |month|
        - if target + month <= now
          %li
            %a{:href=>rurl("/#{year}/#{month}"),
               :title=>"#{month_name(month)}, #{year}"}
              =month_name(month)
